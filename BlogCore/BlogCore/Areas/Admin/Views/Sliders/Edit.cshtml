@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Edit Slider";
}
<br />
<br />
<h3 class="text-center">Edit new slider</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-8 mt-4">
            <div class="form-group row">
                <div class="col-5">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-7">
                    <input asp-for="Name" class="form-control" placeholder="Insert the slider name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-5">
                    <label class="col-4">
                        <label asp-for="Status"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Status" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row mt-2">
                <div class="col-5">
                    <label asp-for="ImageUrl"></label>
                </div>
                <div class="col-7">
                    <input type="file" name="files" id="upFile" class="form-control" />
                </div>
            </div>

            <div class="form-group row m-4">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Update</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Return to list</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 pt-3 d-flex justify-content-center align-items-center">
            <img src="@Model.ImageUrl" style="max-width: 100%; height: 190px; border-radius:5px; border:1px solid #bbb9b9" />
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
