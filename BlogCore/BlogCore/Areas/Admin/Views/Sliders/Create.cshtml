@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Create Slider";
}
<br />
<br />
<h3 class="text-center">Create new slider</h3>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Name"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Name" class="form-control" placeholder="Insert the slider name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-4">
                    <label class="col-5">
                        <label asp-for="Status"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Status"/>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-3">
                <div class="col-4">
                    <label class="col-12">
                        <label asp-for="ImageUrl"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input type="file" name="files" id="upFile" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <partial name="_ViewCreateReturn" />
                </div>
            </div>

        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}