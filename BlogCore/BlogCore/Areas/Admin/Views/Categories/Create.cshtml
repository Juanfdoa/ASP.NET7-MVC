@model BlogCore.Models.Category

@{
    ViewData["Title"] = "Create Category";
}
<br/>
<br/>
<h3 class="text-center">Create new category</h3>
<form method="post" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-5">
                    <label class="col-12">
                        <label asp-for="Name"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Name" class="form-control" placeholder="Insert the category name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-5">
                    <label class="col-12">
                        <label asp-for="Order"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Order" class="form-control" placeholder="Insert the order" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12">
               <partial name="_ViewCreateReturn"/>
            </div>
        </div>
    </div>
</form>