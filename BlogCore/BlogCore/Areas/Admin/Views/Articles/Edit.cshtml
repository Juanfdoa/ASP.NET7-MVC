@model BlogCore.Models.ViewModels.ArticleVM

@{
    ViewData["Title"] = "Edit Article";
}
<br />
<br />
<h3 class="text-center">Edit Article</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Article.Id"/>
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-8 mt-4">
            <div class="form-group row">
                <div class="col-5">
                    <label asp-for="Article.Name"></label>
                </div>
                <div class="col-7">
                    <input asp-for="Article.Name" class="form-control" placeholder="Insert the article name" />
                    <span asp-validation-for="Article.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-5">
                    <label asp-for="Article.Description"></label>
                </div>
                <div class="col-7">
                    <textarea asp-for="Article.Description" class="form-control" placeholder="Insert description"></textarea>
                    <span asp-validation-for="Article.Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-5">
                    <label for="Category">Category</label>
                </div>
                <div class="col-7">
                    @Html.DropDownListFor(m => m.Article.CategoryId, Model.CategoryList,
                    "-Please select one category-", new {@class = "form-control"})
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-5">
                    <label asp-for="Article.ImageUrl"></label>
                </div>
                <div class="col-7">
                    <input type="file" name="files" id="upFile" class="form-control" />
                </div>
            </div>

            <div class="form-group row m-4">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Article.Id">Update</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Return to list</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 pt-3 d-flex justify-content-center align-items-center">
            <img src="@Model.Article.ImageUrl" style="max-width: 100%; height: 400px; border-radius:5px; border:1px solid #bbb9b9" />
        </div>
    </div>
</form>

@section Scripts{
    <script src="https://cdn.tiny.cloud/1/qukxrn62f4bz0iv6z7enaelkkzuzugir28y709xit9xm659s/tinymce/5/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}