@model BlogCore.Models.ViewModels.ArticleVM

@{
    ViewData["Title"] = "Create Article";
}
<br />
<br />
<h3 class="text-center">Create new Article</h3>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-5">
                    <label class="col-12">
                        <label asp-for="Article.Name"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Article.Name" class="form-control" placeholder="Insert the article name" />
                    <span asp-validation-for="Article.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-5">
                    <label class="col-12">
                        <label asp-for="Article.Description"></label>
                    </label>
                </div>
                <div class="col-7">
                    <textarea asp-for="Article.Description" class="form-control" placeholder="Insert description" ></textarea>
                    <span asp-validation-for="Article.Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-5">
                    <label class="col-12">
                        <label for="Category">Category</label>
                    </label>
                </div>
                <div class="col-7">
                   @Html.DropDownListFor(m => m.Article.CategoryId, Model.CategoryList, 
                       "-Please select one category-", new {@class = "form-control"})
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-5">
                    <label class="col-12">
                        <label asp-for="Article.ImageUrl"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input type="file" name="files" id="upFile" class="form-control"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <partial name="_ViewCreateReturn" />
                </div>
            </div>

        </div>
    </div>
</form>

@section Scripts{
    <script src="https://cdn.tiny.cloud/1/qukxrn62f4bz0iv6z7enaelkkzuzugir28y709xit9xm659s/tinymce/5/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}