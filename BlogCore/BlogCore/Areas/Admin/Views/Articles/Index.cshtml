

<div class="container mt-4">
    <div class="row">
        <div class="col-10">
            <h2 class="text-primary">Article List</h2>
        </div>
        <div class="col-2 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> New Article</a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblArticles" class="table table-striped table-bordered" style="width:100%">
