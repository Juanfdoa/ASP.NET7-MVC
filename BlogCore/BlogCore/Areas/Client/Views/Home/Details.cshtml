@model BlogCore.Models.Article

@{
    ViewData["Title"] = "Article detail";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-light text-light m-lg-0 row container">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">@Model.Name</h4>
            </div>
            <div class="col-12 col-md-6 text-md-right">
                <h4 class="text-muted">Date: @Model.CreatedDate</h4>
            </div>
        </div>
        <div class="card-body row container">
            <div class="col-12 col-md-6">
                <p class="text-secondary">@Html.Raw(Model.Description)</p>
            </div>
            <div class="col-12 col-md-6 text-md-right">
                <img src="@Model.ImageUrl" class="img-thumbnail mx-auto d-block" />
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Return</a>
                </div>
            </div>
        </div>
    </div>
</div>