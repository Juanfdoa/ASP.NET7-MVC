@model BlogCore.Models.ViewModels.HomeVm

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @{
            int cont = 0;
            @foreach (var item in Model.Slider)
            {
                @if (item.Status == true)
                {
                    var itemDinamico = cont++ == 0 ? "active" : "";
                    <div class="carousel-item @itemDinamico">
                        <img src="@Url.Content(item.ImageUrl)" class="d-block w-100" alt="@Html.Raw(item.Name)">
                        <h2 class="text-white text-center bg-dark py-1">@Html.Raw(item.Name)</h2>
                    </div>
                } 
            }
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
