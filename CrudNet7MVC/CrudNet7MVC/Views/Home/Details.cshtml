@model CrudNet7MVC.Models.Contact

@{
    ViewData["Title"] = "Detalle Contacto";
}

<h1 class="text-center">Contacto con .Net 7 (.Net Core MVC)</h1>
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Details</h3>
    </div>
    <div class="card-body">
        <ul class="list-group">
            <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(m => m.Name)</li>
            <li class="list-group-item"><strong>Telefono: </strong>@Html.DisplayFor(m => m.Telephone)</li>
            <li class="list-group-item"><strong>Celular: </strong>@Html.DisplayFor(m => m.Phone)</li>
            <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
        </ul>
        <a asp-controller="Home" asp-action="Index">Volver</a>
    </div>
</div>


