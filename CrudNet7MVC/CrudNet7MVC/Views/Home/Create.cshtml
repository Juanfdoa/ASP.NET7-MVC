@model CrudNet7MVC.Models.Contact

@{
    ViewData["Title"] = "Crear Nuevo Contacto";
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Crear Nuevo Contacto</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form role="form" asp-action="Create" method="POST">
        <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telephone" class="control-label"></label>
                    <input asp-for="Telephone" class="form-control" placeholder="Ingresa el telefono" />
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" placeholder="Ingresa el celular" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Ingresa el email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary"><i class="bi bi-person-fill"></i> Create user</button>
        </div>
    </form>
    <div>
        <a asp-action="Index">Return</a>
    </div>
</div>


