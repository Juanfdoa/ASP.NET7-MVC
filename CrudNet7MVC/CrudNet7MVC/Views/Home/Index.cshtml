@model IEnumerable<CrudNet7MVC.Models.Contact>

@{
    ViewData["Title"] = "Lista de contactos";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Crud usuarios</h3>
        <div class="float-right">
            <a asp-action="create" asp-controller="Home" class="btn btn-success d-block mx-auto btn-lg">
                <i class="bi bi-file-plus-fill"></i>Nuevo Usuario
            </a>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordere" id="tablaUsuarios" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Id)</th>
                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                            <th>@Html.DisplayNameFor(m => m.Telephone)</th>
                            <th>@Html.DisplayNameFor(m => m.Phone)</th>
                            <th>@Html.DisplayNameFor(m => m.Email)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.Id)</td>
                                <td>@Html.DisplayFor(m => item.Name)</td>
                                <td>@Html.DisplayFor(m => item.Telephone)</td>
                                <td>@Html.DisplayFor(m => item.Phone)</td>
                                <td>@Html.DisplayFor(m => item.Email)</td>
                                <td>
                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i>Editar</a>
                                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-circle-fill"></i>Delalle</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-eraser-fill"></i>Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No hay registros</p>
            }
    </div>
    <!-- /.card-body -->
</div>



@section Scripts{ 
    <script>
        $(document).ready(function () {
            //Llamar a datatable
            $('#tablaUsuarios').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });        
    </script>
}